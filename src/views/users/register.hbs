<div class="row">
  <div class="col-md-4 mx-auto bg-transparent">
    <div class="card bg-transparent">
      <div class="card-header">
        Crear Nueva Cuenta
      </div>
      <div class="card-body">
        <form action="/users/register" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}" autofocus>
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="{{confirm_password}}">
          </div>
          <button class="btn btn-primary btn-block">
            Registrarse 
          </button>
          <div class="form-group">
            <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
              <i class="fab fa-facebook"></i> Login con facebook
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>