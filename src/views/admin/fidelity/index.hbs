<!-- HEADER -->
<header id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>
          <i class="fas fa-cog"></i> Lista de Usuarios</h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="actions" class="py-4 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="/admin/products/new" class="btn btn-primary btn-block">
          <i class="fas fa-plus"></i> Agregar Producto
        </a>
      </div>     
      <div class="col-md-3">
        <a href="/admin/pdf/generate" class="btn btn-success btn-block">
          <i class="fas fa-plus"></i> Generar Catalogo
        </a>
      </div> 
    </div>
  </div>
</section>

<div class="row userMain">
    {{#each users}}
    <div class="col-md-3 col-sm-4">
        <div class="userBlock">
            <div class="backgrounImg">
                <img src="https://preview.ibb.co/miQjb7/photography4.jpg">
            </div>
            <div class="userImg">
                {{#if photo}}
                    <img src="{{photo}}">
                {{else}}
                    <img src="https://image.ibb.co/es4AG7/author4.jpg">
                {{/if}}
            </div>
            <div class="userDescription">
                <h5>{{name}}</h5>
                <p>{{email}}</p>
                <p>Registrado por: {{provider}}</p>


                <div class="followrs">
                    <span class="number">{{fidelity}}</span>
                    <span>Puntos de Fidelidad</span>
                </div>
                <a class="premiar" href="#" data-userid={{_id}}>
                    <button class="btn">Premiar</button>
                </a>
                <a class="redeem" href="#" data-userid={{_id}}>
                    <button class="btn btn-success">Redeem</button>
                </a>
            </div>

        </div>
    </div>
    {{/each}}
</div>