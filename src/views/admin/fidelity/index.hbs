<!-- HEADER -->
<header id="main-header" class="py-2 bg-orluc text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>
          <i class="fas fa-users"></i> Mis Clientes
        </h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="actions" class="py-4 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="/admin/products/new" class="btn btn-warning btn-block">
          <i class="fas fa-plus"></i> Agregar Producto
        </a>
      </div>
      <div class="col-md-3">
        <a href="/admin/pdf/generate" class="btn btn-success btn-block">
          <i class="fas fa-plus"></i> Generar Catalogo
        </a>
      </div>
      <div class="col-md3 ml-auto mr-4">
        <form action="#" method="GET" id="users-search">
          <div class="input-group mb-3">
            <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Buscar..." aria-label="Recipient's username"
                aria-describedby="basic-addon2">
              <div class="input-group-append">
                <button class="btn btn-outline-dark" type="submit"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<div id="update-search" class="row">
    {{#each users}}
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
        <div class="tile">
            <div class="wrapper">
                <div class="header">{{name}}</div>

                <div class="banner-img img-thumbnail">
                    <img src="{{#if photo}}{{photo}}{{else}}https://avatars.servers.getgo.com/2205256774854474505_medium.jpg{{/if}}" alt="Image 1">
                </div>

                <div class="stats">

                    <div>
                        <strong>PUNTOS</strong> <span class="puntos">{{fidelity}}</span>
                    </div>

                    <div>
                        <strong>CANJES</strong> <span class="redeem_puntos">{{canjes}}</span>
                    </div>

                </div>
                

                <div class="footer">
                    <a href="#" class="btn btn-success redeem" data-userid={{_id}}>Redeem</a>
                    <a href="#" class="btn btn-primary premiar" data-userid={{_id}}>+1</a>
                    <a href="#" class="btn btn-danger">Editar</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>